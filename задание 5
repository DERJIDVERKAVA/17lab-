using System;

enum EmploymentStatus { Active, OnLeave, Terminated }

class Employee
{
    public string Name { get; set; }
    public DateTime? HireDate { get; set; }
    public EmploymentStatus Status { get; set; }

    public int? GetYearsWorked()
    {
        if (!HireDate.HasValue || HireDate.Value > DateTime.Now)
            return null;
        
        int years = DateTime.Now.Year - HireDate.Value.Year;
        if (DateTime.Now < HireDate.Value.AddYears(years))
            years--;
        
        return years;
    }

    public override string ToString() => 
        $"Имя: {Name}, Статус: {Status}, Стаж: {GetYearsWorked()?.ToString() ?? "Не указан"} лет";
}

class Program
{
    static void Main()
    {
        var employees = new[]
        {
            new Employee { Name = "Иван", HireDate = new DateTime(2018, 5, 15), Status = EmploymentStatus.Active },
            new Employee { Name = "Мария", HireDate = new DateTime(2020, 3, 10), Status = EmploymentStatus.OnLeave },
            new Employee { Name = "Алексей", HireDate = null, Status = EmploymentStatus.Terminated },
            new Employee { Name = "Ольга", HireDate = new DateTime(2024, 12, 1), Status = EmploymentStatus.Active }
        };

        Console.WriteLine("Список сотрудников:");
        foreach (var emp in employees)
            Console.WriteLine($"{emp}\tДата найма: {emp.HireDate?.ToString("dd.MM.yyyy") ?? "Нет данных"}");
    }
}
